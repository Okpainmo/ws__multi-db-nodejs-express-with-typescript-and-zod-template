{
  "name": "multi-db-nodejs-express-with-typescript-and-zod-template",
  "version": "1.0.0",
  "description": "A fully-typed backend(NodeJs) project server template",
  "type": "module",
  "scripts": {
    "start": "node ./build/src/app.js",
    "dev": "tsc --noEmit && tsx watch ./src/app.ts",
    "build": "tsc -p tsconfig.build.json",
    "lint": "bun eslint .",
    "lint-staged": "bun lint-staged",
    "format": "bun prettier . --write",
    "prepare": "husky",
    "postinstall": "bunx dotenv -e .env.development -- bunx prisma generate",
    "ws:test": "tsx src/lib/webSocketCore/testClient/test-client.ts",
    "ws:client": "open src/lib/webSocketCore/testClient/test-client.html || xdg-open src/lib/webSocketCore/testClient/test-client.html || start src/lib/webSocketCore/testClient/test-client.html"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.16.0",
    "mongoose": "^8.14.2",
    "nodemailer": "^7.0.3",
    "pg": "^8.18.0",
    "pino": "^10.3.0",
    "ws": "^8.19.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.26.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.17",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.5.3",
    "prisma": "^7.3.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
